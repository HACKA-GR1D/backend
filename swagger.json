{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "AutoMatchs",
    "description": "AutoMatch tem a ideia agilizar na concessão de financiamentos para automóveis ",
    "contact": {
      "name": "Team 1",
      "email": "tomacheski2001@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3333/",
      "description": "Local server"
    },
    {
      "url": "https://api_url_testing",
      "description": "Testing server"
    }
  ],
  "tags": [
    {
      "name": "Nossos serviços"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "tags": ["Nossos serviços"],
        "description": "Get financiamentos disponíveis para o cliente",
        "operationId": "GetFinanciamentos",
        "parameters": [
          {
            "name": "dataFinancing",
            "in": "header",
            "schema": {
              "$ref": "#/components/schemas/dataFinancing"
            },
            "example": {
              "name": "Vera da Costa",
              "CPF": "01248001003",
              "RG": "1111111111"
            },
            "required": true,
            "description": "Necessary data for financing"
          }                  
        ],
        
        "responses": {
          "200": {
            "description": "financiamentos disponíveis",
            "content": {
              "application/json": {
                "schema": {
                  "$ref":"#/components/schemas/Financing"
                },
                
                "example": {
                  "nameBank": "Nome do banco",
                  "methodPayment": "Tiered",
                  "CalculationFrequency": "Daily",
                  "ApplicationFrequency": "Monthly",
                  "VariableInterestRateType": "Fixed",
                  "interestRate": "0.00",
                  "destination": "PayAway"
                
              }
            }
            }
          },
          "400": {
            "description": "Missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "data invalid",
                  "internal_code": "missing_parameters"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "dataFinancing":{
        "type": "object",
        "properties": {
          "Name": {
            "type": "String"
          },
          "CPF": {
            "type": "String"
          },
          "RG": {
            "type": "Number"
          }
        }
      },
      "Financing":{
        "type": "object",
        "properties": {
          "nameBank": {
            "type": "String"
          },
          "methodPayment": {
            "type": "String"
          },
          "CalculationFrequency": {
            "type": "String"
          },
          "ApplicationFrequency": {
            "type": "String"
          },
          "VariableInterestRateType": {
            "type": "String"
          },
          "interestRate": {
            "type": "Number"
          },
          "destination": {
            "type": "String"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "internal_code": {
            "type": "string"
          }
        }
      }
    }
  }
}